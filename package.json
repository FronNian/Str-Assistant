{
  "name": "str-assistant",
  "private": true,
  "license": "MIT",
  "icon": "static/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/FronNian/Str-Assistant"
  },
  "publisher": "fronnian",
  "displayName": "String Assistant - 字符串助手",
  "description": "一个功能强大的 VSCode 字符串处理工具，支持多种字符串转换功能：大小写转换、命名风格转换（驼峰、下划线等）、中英文标点转换、多行文本处理（排序、去重、合并）等。让文本处理更简单高效。",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension",
  "activationEvents": ["*"],
  "contributes": {
    "commands": [
      {
        "command": "str-transform.allToUpper",
        "title": "全部转换为大写"
      },
      {
        "command": "str-transform.allToLower",
        "title": "全部转换为小写"
      },
      {
        "command": "str-transform.headToUpper",
        "title": "首字母转换为大写"
      },
      {
        "command": "str-transform.headToLower",
        "title": "首字母转换为小写"
      },
      {
        "command": "str-transform.allHeadToUpper",
        "title": "全部首字母转换为大写"
      },
      {
        "command": "str-transform.allHeadToLower",
        "title": "全部首字母转换为小写"
      },
      {
        "command": "str-transform.toCamelCase",
        "title": "转换为小驼峰命名"
      },
      {
        "command": "str-transform.toPascalCase",
        "title": "转换为大驼峰命名"
      },
      {
        "command": "str-transform.toSnakeCase",
        "title": "转换为下划线命名"
      },
      {
        "command": "str-transform.toKebabCase",
        "title": "转换为中划线命名"
      },
      {
        "command": "str-transform.reverse",
        "title": "反转字符串"
      },
      {
        "command": "str-transform.removeSpaces",
        "title": "移除所有空格"
      },
      {
        "command": "str-transform.copyTransformed",
        "title": "复制转换后的文本"
      },
      {
        "command": "str-transform.toPunctuation",
        "title": "中文标点转换为英文"
      },
      {
        "command": "str-transform.removeEmptyLines",
        "title": "删除空行"
      },
      {
        "command": "str-transform.removeDuplicateLines",
        "title": "删除重复行"
      },
      {
        "command": "str-transform.sortAscending",
        "title": "升序排序"
      },
      {
        "command": "str-transform.sortDescending",
        "title": "降序排序"
      },
      {
        "command": "str-transform.shuffleLines",
        "title": "打乱行顺序"
      },
      {
        "command": "str-transform.mergeLines",
        "title": "合并多行"
      },
      {
        "command": "str-transform.mergeLinesWithQuotes",
        "title": "合并多行（带引号）"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "submenu": "str-transform.menu"
        }
      ],
      "str-transform.menu": [
        {
          "command": "str-transform.allToUpper",
          "group": "1_case@1"
        },
        {
          "command": "str-transform.allToLower",
          "group": "1_case@2"
        },
        {
          "command": "str-transform.headToUpper",
          "group": "2_modification"
        },
        {
          "command": "str-transform.headToLower",
          "group": "2_modification"
        },
        {
          "command": "str-transform.allHeadToUpper",
          "group": "3_modification"
        },
        {
          "command": "str-transform.allHeadToLower",
          "group": "3_modification"
        },
        {
          "command": "str-transform.toCamelCase",
          "group": "2_naming@1"
        },
        {
          "command": "str-transform.toPascalCase",
          "group": "4_case"
        },
        {
          "command": "str-transform.toSnakeCase",
          "group": "4_case"
        },
        {
          "command": "str-transform.toKebabCase",
          "group": "4_case"
        },
        {
          "command": "str-transform.reverse",
          "group": "5_transform"
        },
        {
          "command": "str-transform.removeSpaces",
          "group": "5_transform"
        },
        {
          "command": "str-transform.copyTransformed",
          "group": "5_other@1"
        },
        {
          "command": "str-transform.toPunctuation",
          "group": "3_punctuation@1"
        },
        {
          "command": "str-transform.removeEmptyLines",
          "group": "4_lines@1"
        },
        {
          "command": "str-transform.removeDuplicateLines",
          "group": "8_lines",
          "when": "config.strAssistant.contextMenu.lines"
        },
        {
          "command": "str-transform.sortAscending",
          "group": "8_lines",
          "when": "config.strAssistant.contextMenu.lines"
        },
        {
          "command": "str-transform.sortDescending",
          "group": "8_lines",
          "when": "config.strAssistant.contextMenu.lines"
        },
        {
          "command": "str-transform.shuffleLines",
          "group": "8_lines",
          "when": "config.strAssistant.contextMenu.lines"
        },
        {
          "command": "str-transform.mergeLines",
          "group": "8_lines",
          "when": "config.strAssistant.contextMenu.lines"
        },
        {
          "command": "str-transform.mergeLinesWithQuotes",
          "group": "8_lines",
          "when": "config.strAssistant.contextMenu.lines"
        }
      ]
    },
    "submenus": [
      {
        "id": "str-transform.menu",
        "label": "字符串助手"
      }
    ],
    "configuration": {
      "title": "字符串助手",
      "properties": {
        "strAssistant.contextMenu": {
          "type": "object",
          "default": {
            "case": true,
            "punctuation": true,
            "lines": true,
            "spaces": true,
            "naming": true,
            "other": true
          },
          "properties": {
            "case": {
              "type": "boolean",
              "default": true,
              "description": "显示大小写转换功能"
            },
            "punctuation": {
              "type": "boolean",
              "default": true,
              "description": "显示标点符号转换功能"
            },
            "lines": {
              "type": "boolean",
              "default": true,
              "description": "显示行处理功能"
            },
            "spaces": {
              "type": "boolean",
              "default": true,
              "description": "显示空格处理功能"
            },
            "naming": {
              "type": "boolean",
              "default": true,
              "description": "显示命名转换功能"
            },
            "other": {
              "type": "boolean",
              "default": true,
              "description": "显示其他功能"
            }
          },
          "description": "控制右键菜单中显示的功能"
        },
        "strAssistant.mergeLine": {
          "type": "object",
          "default": {
            "separator": ",",
            "quote": "\""
          },
          "properties": {
            "separator": {
              "type": "string",
              "default": ",",
              "description": "合并行时使用的分隔符"
            },
            "quote": {
              "type": "string",
              "enum": ["\"", "'", "none"],
              "default": "\"",
              "description": "合并行时使用的引号类型"
            }
          },
          "description": "合并行的相关设置"
        }
      }
    }
  },
  "scripts": {
    "clean": "rimraf out",
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5",
    "rimraf": "^3.0.2"
  }
}